{
  "name": "cppview",
  "displayName": "CppView",
  "description": "Explorer view for C/C++ codebases",
  "version": "1.1.0",
  "publisher": "Kamtar",
  "repository": "https://github.com/kamtar/vscode_cpp_view",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:cppView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "cppView",
          "name": "Cpp View"
        }
      ]
    },
    "commands": [
      {
        "command": "cppView.openFile",
        "title": "Open File"
      },
      {
        "command": "cppView.newFile",
        "title": "New File"
      },
      {
        "command": "cppView.copy",
        "title": "Copy File"
      },
      {
        "command": "cppView.copyPath",
        "title": "Copy Path"
      },
      {
        "command": "cppView.revealInFileExplorer",
        "title": "Reveal in File Explorer"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "cppView.newFile",
          "when": "view == cppView",
          "group": "1_edits"
        },
        {
          "command": "cppView.copy",
          "when": "view == cppView",
          "group": "2_reads"
        },
        {
          "command": "cppView.copyPath",
          "when": "view == cppView",
          "group": "2_reads"
        },
        {
          "command": "cppView.revealInFileExplorer",
          "when": "view == cppView",
          "group": "3_views"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
